<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewStatName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextViewStatValue" parent="TextViewStatName">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressBarStatValue" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:max">200</item>
        <item name="android:scaleY">1.2</item>
    </style>

</resources>